<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.puppypedia">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.main.ui.add_weight.AddWeightActivity"
            android:exported="true" />
        <activity
            android:name=".ui.main.ui.category.CategoryActivity"
            android:exported="true" />
        <activity android:name=".ui.main.ui.weight_chart.WeightChartActivity" />
        <activity
            android:name=".ui.main.ui.addremainder.AddRemainderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.main.ui.category_detail.CategoryDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.main.ui.about_us.AboutUsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.main.ui.changepassword.ChangePasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.main.ui.editprofile.EditProfileActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".ui.main.ui.profile.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.main.ui.petdetail.YourPetDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.main.ui.notification.NotificationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.main.ui.home.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.auth.forgotpassword.ForgotPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.auth.signup.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.auth.login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.main.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.ui.editpetprofile.EditPetProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.main.ui.mypetprofile.MyPetProfileActivity"
            android:screenOrientation="portrait" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>