<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".ui.auth.forgotpassword.ForgotPasswordActivity">

    <include
        android:id="@+id/tb"
        layout="@layout/auth_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp">
                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:contentDescription="@string/image"
                    android:src="@drawable/puppypediamain" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/courgette_regular"
                    android:text="@string/forgot_pass"
                    android:textColor="@color/theme_Color"
                    android:textSize="@dimen/_20sdp" />
                <TextView
                    style="@style/WrapTextView"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="@string/please_fill_your_register_email_we_will_send_a_four_digit_code_on_there"
                    android:textColor="@color/grey" />

                <TextView
                    style="@style/WrapTextView"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/email"
                    android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/etEmail"
                style="@style/MatchEditText"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edit_text"
                android:hint="@string/enter_email"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSubmit"
                    style="@style/ButtonMatch"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/bg_sky_blue_10dp"
                    android:contentDescription="@string/image"
                    android:text="@string/submit" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
