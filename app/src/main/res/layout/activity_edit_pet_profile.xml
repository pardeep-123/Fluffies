<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.ui.editpetprofile.EditPetProfileActivity">
    <include
        android:id="@+id/tb"
        layout="@layout/auth_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/rivPet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/img"
                app:riv_corner_radius="@dimen/_5sdp" />

            <TextView
                style="@style/WrapTextView"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="@string/name"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/etName"
                style="@style/MatchEditText"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/bg_edit_text"
                android:hint="@string/enter_name"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:text="Rocky" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/WrapTextView"
                        android:text="@string/gender"
                        android:textSize="@dimen/_14sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/bg_edit_text">

                        <Spinner
                            android:id="@+id/spinnerGender"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null" />


                        <ImageView
                            android:layout_width="@dimen/_8sdp"
                            android:layout_height="@dimen/_8sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:src="@drawable/downaero" />
                    </RelativeLayout>
                    <TextView
                        style="@style/WrapTextView"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/weight"
                        android:textSize="@dimen/_14sdp" />
                    <EditText
                        android:id="@+id/etWeight"
                        style="@style/MatchEditText"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/bg_edit_text"
                        android:hint="@string/weight"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        style="@style/WrapTextView"
                        android:text="@string/age"
                        android:textSize="@dimen/_14sdp" />
                  <!--  <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/bg_edit_text">

                        <Spinner
                            android:id="@+id/spinnerAge"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null" />


                        <ImageView
                            android:layout_width="@dimen/_8sdp"
                            android:layout_height="@dimen/_8sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:src="@drawable/downaero" />


                    </RelativeLayout>-->
                    <EditText
                        android:id="@+id/etAge"
                        style="@style/MatchEditText"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/bg_edit_text"
                        android:hint="@string/weight"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp" />


                    <TextView
                        style="@style/WrapTextView"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/breed"
                        android:textSize="@dimen/_14sdp" />

                    <EditText
                        android:id="@+id/etBreed"
                        style="@style/MatchEditText"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/bg_edit_text"
                        android:hint="@string/breed"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:text="Golden Retriever" />


                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/WrapTextView"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/about_pet"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/etAbout"
                style="@style/MatchEditText"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/bg_edit_text"
                android:gravity="start|top"
                android:hint="@string/about_pet"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:maxHeight="@dimen/_100sdp"
                android:minHeight="@dimen/_100sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:text="@string/dummY_text" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUpdate"
                style="@style/ButtonMatch"
                android:layout_margin="@dimen/_20sdp"
                android:background="@drawable/bg_sky_blue_10dp"
                android:contentDescription="@string/image"
                android:text="@string/update" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>