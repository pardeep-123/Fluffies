<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.ui.mypetprofile.MyPetProfileActivity">

    <include layout="@layout/auth_toolbar"
        android:id="@+id/tb"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:scaleType="fitXY"
                android:src="@drawable/dog_img"
                app:riv_corner_radius="@dimen/_5sdp" />

            <TextView
                style="@style/WrapTextView"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/pet_detail" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    style="@style/WrapTextView"
                    android:layout_alignParentStart="true"
                    android:text="@string/name"
                    android:textColor="@color/theme_Color" />

                <TextView
                    style="@style/WrapTextView"
                    android:layout_alignParentEnd="true"
                    android:text="@string/rony" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    style="@style/WrapTextView"
                    android:layout_alignParentStart="true"
                    android:text="@string/gender"
                    android:textColor="@color/theme_Color" />

                <TextView
                    style="@style/WrapTextView"
                    android:layout_alignParentEnd="true"
                    android:text="@string/male" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    style="@style/WrapTextView"
                    android:layout_alignParentStart="true"
                    android:text="@string/weight"
                    android:textColor="@color/theme_Color" />

                <TextView
                    style="@style/WrapTextView"
                    android:layout_alignParentEnd="true"
                    android:text="@string/_120_lbs" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    style="@style/WrapTextView"
                    android:layout_alignParentStart="true"
                    android:text="@string/age"
                    android:textColor="@color/theme_Color" />

                <TextView
                    style="@style/WrapTextView"
                    android:layout_alignParentEnd="true"
                    android:text="@string/_01_yr" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    style="@style/WrapTextView"
                    android:layout_alignParentStart="true"
                    android:text="@string/breed"
                    android:textColor="@color/theme_Color" />

                <TextView
                    style="@style/WrapTextView"
                    android:layout_alignParentEnd="true"
                    android:text="@string/golden_retriever" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    style="@style/WrapTextView"
                    android:layout_alignParentStart="true"
                    android:text="About Pet"
                    android:textColor="@color/theme_Color" />

            </RelativeLayout>

            <EditText
                style="@style/MatchEditText"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edit_text_10dp"
                android:hint="@string/dummY_text"
                android:maxHeight="@dimen/_70sdp"
                android:minHeight="@dimen/_70sdp"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/BtnEdit"
                style="@style/ButtonMatch"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/bg_sky_blue_10dp"
                android:contentDescription="@string/image"
                android:text="@string/edit_pet_profile" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>