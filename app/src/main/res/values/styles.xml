<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_Color</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:overScrollMode">never</item>
    </style>

     <style name="TextMediumFont" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BottomNavigationViewActive" parent="Widget.Design.BottomNavigationView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="fontFamily">@font/opensans_regular</item>
    </style>

    <style name="BottomNavigationViewInActive" parent="Widget.Design.BottomNavigationView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="fontFamily">@font/opensans_regular</item>
    </style>

    <style name="WrapTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MatchTextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextRegularFont" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MatchEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColorHint">@color/lightGrayA3A3A3</item>
    </style>

    <style name="ButtonMatch" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="CalendarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorControlActivated">@color/theme_Color</item>
        <item name="android:fontFamily">@font/courgette_regular</item>
    </style>

    <style name="CalendarDayColor" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="CalendarWeekColor" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.Picker" parent="AppTheme">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <!--        <item name="colorControlNormal">@color/theme_Color</item>-->
    </style>


    <style name="AlertTextAppearanceTitle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AlertTextAppearanceText">
        <item name="android:textSize">10sp</item>
    </style>

</resources>